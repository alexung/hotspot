<div class="note-box">

<%= form_for :note, url: notes_path, method: :post do |f| %>

  <div>
    <%= f.label :content, "Notes" %>
    <%= f.text_area :content %>
  </div>

  <%= f.hidden_field :user_id, value: "#{@username}" %>

  <%= f.hidden_field :repository_id, value: "#{ @repository}" %>

  <div>
    <%= f.submit "Add Note" %>
  </div>

<% end %>

</div>
